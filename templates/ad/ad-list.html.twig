{% extends 'base.html.twig' %}

{% block content %}
    <h1>Listes des annonces</h1>

    <div id="order_by">
        {{ form_start(categoryForm, {
            'attr':{
                'novalidate': 'novalidate'
            }
        }) }}
        {{ form_widget(categoryForm) }}
            <button class="btn btn-primary">Trier</button>
