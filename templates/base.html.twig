<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Le Meilleur Coin{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('css/app.css') }}">
    </head>
    <body>
        <header>
            <nav id="main-nav" class="col-sm-6">
                <div id="title">
                    {% if is_granted('ROLE_USER') %}
                        <a href="{{ path('home') }}"><img src="{{ asset('img/logo.png') }}" alt="logo" width="70" height="70"></a>
                    {% else %}
                        <a href="{{ path('list') }}"><img src="{{ asset('img/logo.png') }}" alt="logo" width="70" height="70"></a>
                    {% endif %}
                    <h1>Le Meilleur Coin</h1>
                </div>

                <div id="menu">
                    <a href="{{ path('list') }}">Liste des annonces</a>
                    {% if not is_granted('ROLE_USER') %}
                        <a href="{{ path('register') }}">Inscription</a>
                        <a href="{{ path('app_login') }}">Connexion</a>
                    {% endif %}
                    {% if is_granted('ROLE_USER')%}
                        <a href="{{ path('ad') }}">Déposer une annonce</a>
                        <a href="{{ path('myads') }}">Mes annonces</a>
                        <a href="{{ path('myfavads') }}">Mes favoris</a>
                        <a href="{{ path('app_logout') }}">Déconnexion</a>
                    {% endif %}
                </div>
            </nav>
        </header>

            <main>
                {% block content %}{% endblock %}
            </main>

        <footer>
            <div class="nav col-sm-3">
                <a href="{{ path('home') }}">Accueil</a>
                <a href="{{ path('faq') }}">FAQ</a>
                <a href="{{ path('cgu') }}">CGU</a>
            </div>
        </footer>
    </body>
    <script type="text/javascript" src="{{ asset('js/bootstrap.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/jquery.js') }}"></script>
</html>
